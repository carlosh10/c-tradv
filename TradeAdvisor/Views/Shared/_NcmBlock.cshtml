@model List<TradeAdvisor.Entities.PRODUTOS_SENSIVEIS_POCO>

@foreach (var ncm in @Model)
{
    <div class="col-xs-12 block_default">

        <a href="@Url.Action("DetalhesNcm", "Ncm", new { idNcm = ncm.pk_ncmrf_15a, descricao_detalhada_produto = @Request["descricao_detalhada_produto"] })" class="continue_lendo">
            •••
        </a>

        <table class="table table_trade1">
            <tr>
                <td>
                    @ncm.mes_ano
                </td>
                <td>
                    <span>
                        <img class="flag flag-@ncm.siglaPaisOrigem.ToLower()" data-toggle="tooltip" data-placement="bottom" src="~/img/blank.gif" alt="@ncm.paisOrigem" title="@ncm.paisOrigem">
                        Or.
                    </span>

                    <span>
                        <img class="flag flag-@ncm.siglaPaisAquisicao.ToLower()" data-toggle="tooltip" data-placement="bottom" src="~/img/blank.gif" alt="@ncm.paisAquisicao" title="@ncm.paisAquisicao">
                        Aq.
                    </span>

                </td>
                <td>
                    Cód. NCM
                    @ncm.ncm
                </td>
                <td>
                    @*@ncm.descricao_ncm*@
                </td>
            </tr>
        </table>

        <table class="table table-striped table_trade2">
            <thead>
                <tr>
                    <th>
                        <strong>Qtd. Com.</strong>

                    </th>
                    <th>
                        <strong>Un. Com.</strong>
                    </th>
                    <th>
                        <strong>CIF Total USD</strong>
                    </th>
                    <th>
                        <strong>CIF un. USD</strong>

                    </th>
                    <th>
                        <strong>Aliq. Total</strong>

                    </th>
                </tr>

            </thead>

            <tbody>
                <tr>
                    <td>
                        @ncm.quantidade_comercializada_produto
                    </td>
                    <td>
                        @ncm.unidade_comercializacao
                    </td>
                    <td>
                        $@String.Format("{0:0.00}", @ncm.CIF)
                    </td>
                    <td>
                        $@String.Format("{0:0.00}", @ncm.CIF_unitario)
                    </td>
                    <td>
                        @String.Format("{0:0.00}", @ncm.vl_ift)%
                    </td>
                </tr>
            </tbody>
        </table>


        <div class="col-xs-12">
            @ncm.descricao_detalhada_produto
        </div>

    </div>
}