@model List<TradeAdvisor.Entities.GenericSummaryDocument>

@foreach (var doc in Model)
{
    <div class="col-xs-12 block_default">

        @*<a href="@Url.Action("DetalhesNcm", "Ncm", new { idNcm = ncm.pk_ncmrf_15a })" class="continue_lendo">
                •••
            </a>*@
        •••
        <table class="table table_trade1">
            <tr>
                <td>
                    <b>@String.Format("{0:dd/MM/yyyy}", @doc.dt_register)</b>
                </td>
                <td>
                    <span>
                        <img class="flag flag-@doc.tx_origin_country.ToString().ToLower()" data-toggle="tooltip" data-placement="bottom" src="~/img/blank.gif" alt="@doc.tx_origin_country.ToString()" title="@doc.tx_origin_country.ToString()">
                        @doc.tx_origin_country.ToString()
                    </span>
                </td>
                <td>
                    <b>Numero do Documento: </b>
                    @doc.nr_document
                </td>
                <td>
                    <b>Tipo de Documento: </b>
                    @doc.tx_doc_type
                </td>
            </tr>
        </table>

        <table class="table table-striped table_trade2">
            <thead>
                <tr>
                    <th>
                        <strong>Qtd. Relacionada</strong>
                    </th>
                    <th>
                        <strong>Valor Frete</strong>
                    </th>
                    <th>
                        <strong>Valor Seguro</strong>
                    </th>
                    <th>
                        <strong>Peso Bruto</strong>
                    </th>
                    <th>
                        <strong>Despacho/Descarregamento</strong>
                    </th>
                    <th>
                        <strong>Via Transporte</strong>
                    </th>
                    <th>
                        <strong>Canal</strong>
                    </th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>
                        @doc.vl_quantity
                    </td>
                    <td>
                        R$ @String.Format("{0:0.00}", @doc.vl_freight)
                    </td>
                    <td>
                        R$ @String.Format("{0:0.00}", @doc.vl_insurance)
                    </td>
                    <td>
                        @String.Format("{0:0.00}", @doc.vl_gross_weight)
                    </td>
                    <td>
                        @doc.tx_discharging
                    </td>
                    <td>
                        @doc.tx_transport_route
                    </td>
                    <td>
                        @doc.tx_chanel
                    </td>
                </tr>
            </tbody>
        </table>

        @*<div class="col-xs-12">
             @ncm.descricao_detalhada_produto
        </div>*@
    </div>
}