@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en-us">
@Html.Partial("_Head")
<body>
    <header data-uk-sticky="{top:-600, animation: 'uk-animation-slide-top'}" class="topo_site dark_blue uk-width-1-1">

        <!--header normal-->

        <nav>
            <div class="uk-container uk-container-center">
                <a class="uk-navbar-brand logo_box uk-hidden-small" href="/">
                    <img width="100%" class="uk-margin-remove" src="~/images/logo.svg" title="Tradeadvisor" alt="Tradeadvisor">
                </a>

                <div class="busca_topo uk-hidden uk-width-medium-6-10">
                    <form class="uk-form" action="@Url.Action("ResumoInicialNcm", "Ncm")">
                        <div class="uk-grid uk-grid-collapse">
                            <div class="uk-width-5-6 uk-width-medium-9-10">
                                <input class="input_busca uk-width-1-1" type="text" placeholder="Pesquisa" value="@Request["descricao_detalhada_produto"]">
                            </div>
                            <div class="uk-width-1-6 uk-width-medium-1-10">
                                <button class="button_busca uk-width-1-1"><i class="uk-icon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="uk-navbar-nav menu_top">
                    <ul class="menu_links">
                        <li>
                            <a class="uk-button" href="#"> <i class="uk-icon-user btn_icon"></i> Entrar</a>
                        </li>
                    </ul>

                </div>

            </div>

        </nav>


    </header>


    @RenderBody()

    @Html.Partial("_Footer")
</body>
</html>