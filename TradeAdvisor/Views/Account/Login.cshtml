@model TradeAdvisor.Models.AccountLoginModel
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="col-xs-10 col-md-4 col-xs-offset-1 col-md-offset-4 logo_center">
    <img src="~/img/logo_tradeadvisor_white.svg" width="100%">
</div>
<!-- input: search field -->
<div class="col-xs-12 col-md-4 col-md-offset-4">
    <form @Url.Action("login", "account") method="POST" id="login-form">
        @Html.AntiForgeryToken()
        @*<input type="hidden" name="returnurl" id="returnurl" value="@Request["ReturnUrl"]" />*@
        @Html.HiddenFor(m => m.ReturnUrl)

        <div class="col-xs-12 padding_zero">
            <input class="input_style col-xs-12" id="email" type="email" name="email" placeholder="Email">
        </div>

        <div class="col-xs-12 padding_zero">
            <input class="input_style col-xs-12" id="senha" type="password" name="senha" placeholder="Senha">
        </div>
        <div class="col-xs-12 padding_zero">
            <a class="text_white" href="@Url.Action("Cadastrar","Account")">Criar uma conta</a>
        </div>
        <div class="col-xs-12 padding_zero">
            <button class="btn botao_padrao" type="submit">
                Logar
            </button>
        </div>
    </form>
    @Html.ValidationSummary(true)
</div>
<!-- end input: search field -->
<!-- MAIN APP JS FILE -->
<script src="~/js/app.min.js"></script>

<script type="text/javascript">
    //runAllForms();
    $(function () {
        // Validation
        $("#login-form").validate({
            // Rules for form validation
            rules: {
                email: {
                    required: true,
                    email: true
                },
                password: {
                    required: true,
                    minlength: 3,
                    maxlength: 20
                }
            },

            // Messages for form validation
            messages: {
                email: {
                    required: 'Please enter your email address',
                    email: 'Please enter a VALID email address'
                },
                password: {
                    required: 'Please enter your password'
                }
            },

            // Do not change code below
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });
    });
</script>
